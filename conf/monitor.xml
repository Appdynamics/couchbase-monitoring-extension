<monitor>
        <name>CouchBaseMonitor</name>
        <type>managed</type>
        <description>CouchBase Monitor</description>
        <monitor-configuration></monitor-configuration>
        <monitor-run-task>
                <execution-style>periodic</execution-style>
                <execution-frequency-in-seconds>60</execution-frequency-in-seconds>
                <name>CouchBase Monitor Run Task</name>
                <display-name>CouchBase Monitor Task</display-name>
                <description>CouchBase Monitor Task</description>
                <type>java</type>
                <execution-timeout-in-secs>60</execution-timeout-in-secs>
                <java-task>
                    <classpath>CouchBaseMonitor.jar;lib/log4j-1.2.15.jar;lib/machineagent.jar;lib/gson-2.2.2.jar;lib/commons-lang-2.4.jar</classpath>
                        <impl-class>com.appdynamics.monitors.couchbase.CouchBaseMonitor</impl-class>
                </java-task>
                <task-arguments>
                    <argument name="host" is-required="false" default-value="localhost"/>
                    <argument name="port" is-required="false" default-value="8091"/>
                    <argument name="username" is-required="false" default-value="username"/>
                    <argument name="password" is-required="false" default-value="password"/>
                    <argument name="disabled-metrics-path" is-required="false" default-value="monitors/CouchBaseMonitor/conf/DisabledMetrics.xml"/>
                </task-arguments>
        </monitor-run-task>
</monitor>
